    style.
      * { box-sizing:border-box; margin:0; padding:0; font-family:'Segoe UI',sans-serif; }
      body { background: linear-gradient(180deg,#f5f7fa,#e4e8f0); color:#1f2937; line-height:1.6; }

      header {
          max-width: 1050px;
          margin: 0 auto;
          padding: 20px 40px;
          display: flex;
          justify-content: space-between;
          align-items: center;
          background-color: #ffffff;
          border-bottom: 2px solid #d2c9c9;
          box-shadow: 0 4px 10px rgba(0,0,0,0.05);
              }
      .logo { font-size:26px; font-weight:700; color:#000000ff; }
      nav a {
          margin-left: 20px;
          text-decoration: none;
          color: #444;
          font-weight: 500;
          transition: all 0.3s ease;
              }
      nav a:hover { color:#0ea5a2; }
      .container { max-width:1050px; margin:0 auto; padding:20px; }
      section { margin-top:50px; }
      h2 {
        font-size:36px; font-weight:700; margin-bottom:24px; color:#0b1120;
        border-left:4px solid #0ea5a2; padding-left:12px;
      }
      .card {
        background:#fff; padding:28px; border-radius:16px;
        box-shadow:0 10px 25px rgba(0,0,0,0.08); margin-bottom:24px;
        transition: transform 0.3s, box-shadow 0.3s;
      }
      .card:hover {
        transform: translateY(-5px);
        box-shadow:0 15px 30px rgba(0,0,0,0.12);
      }
      .resume-grid { display:grid; grid-template-columns:2fr 1fr; gap:28px; }
      .tag {
        display:inline-block; padding:6px 14px; background:#0ea5a2; color:#fff;
        border-radius:999px; font-size:13px; margin:4px 4px 0 0;
        transition: transform 0.2s;
      }
      .tag:hover { transform: scale(1.1); }
      ul li { margin-bottom:8px; }
      footer {
        text-align:center; padding:50px; color:#555; margin-top:60px; font-size:15px;
        border-top:2px solid #ddd;
      }

      .profile-inline {
        display:flex;
        align-items:flex-start;
        justify-content:space-between;
        gap:20px;
      }
      .profile-info { flex:1; }
      .profile-info div { margin-bottom:4px; }

      .avatar {
        width:180px;
        height:220px;
        border-radius:12px;
        overflow:hidden;
        flex-shrink:0;
      }
      .avatar img {
        width:100%;
        height:100%;
        object-fit:cover;
      }
      

